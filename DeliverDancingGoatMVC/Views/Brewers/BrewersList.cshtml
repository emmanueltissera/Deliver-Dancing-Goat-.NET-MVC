@model DeliverDancingGoatMVC.Models.BaseProductCollectionViewModel
    
@if (Model.Items.Any())
{
    foreach (var brewer in Model.Items)
    {
        <!-- 3 products on row for large screen -->
        <div class="col-md-6 col-lg-4">
            @Html.DisplayFor(m => brewer, "ProductListItem")
        </div>
    }
}
else
{
    <span class="ContentLabel">@Resources.DancingGoat.Brewers_NoMatchingProducts</span>
}