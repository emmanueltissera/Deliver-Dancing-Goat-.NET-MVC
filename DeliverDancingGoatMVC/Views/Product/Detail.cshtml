@using DeliverDancingGoatMVC.Models
@model BaseProductViewModel
@{
    ViewBag.Title = Model.System.Name;
    var image = Model.Image;
}
<article class="product-detail">
    <div class="row">
        <div class="col-md-12">
            <header>
                <h2>@Model.System.Name</h2>
            </header>
        </div>
    </div>
    <div class="row-fluid">
        <div class="col-lg-7 col-md-6">
            <figure class="image">
                <img src="@image.Url" alt="@image.Name" />
            </figure>
            <div class="description">
                @(Model.LongDescription ?? Model.ShortDescription)
                <div class="product-detail-properties">
                    <h4>@Resources.DancingGoat.Product_Parameters</h4>
                    <dl class="row">
                        @{
                            var cofeeModel = Model as CoffeeViewModel;
                            if (cofeeModel != null)
                            {
                                <dt class="col-xs-12 col-sm-4">@Resources.DancingGoat.Coffee_Farm</dt>
                                <dd class="col-xs-12 col-sm-8">@cofeeModel.Farm</dd>
                                <dt class="col-xs-12 col-sm-4">@Resources.DancingGoat.Coffee_Variety</dt>
                                <dd class="col-xs-12 col-sm-8">@cofeeModel.Variety</dd>
                                <dt class="col-xs-12 col-sm-4">@Resources.DancingGoat.Coffee_Processing</dt>
                                <dd class="col-xs-12 col-sm-8">@cofeeModel.Processing</dd>
                                <dt class="col-xs-12 col-sm-4">@Resources.DancingGoat.Coffee_Altitude</dt>
                                <dd class="col-xs-12 col-sm-8">@cofeeModel.Altitude</dd>
                            }
                        }
                        @{
                            var brewerModel = Model as BrewerViewModel;
                            if (brewerModel != null)
                            {
                                <dt class="col-xs-12 col-sm-4">@Resources.DancingGoat.Brewers_Manufacturers</dt>
                                <dd class="col-xs-12 col-sm-8">@brewerModel.Manufacturer</dd>
                            }
                        }
                    </dl>
                </div>
            </div>
        </div>
    </div>
</article>