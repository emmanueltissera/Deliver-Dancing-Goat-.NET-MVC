@model DeliverDancingGoatMVC.Models.BaseProductViewModel
@{
    var image = Model.Image;
}

<article class="product-tile">
    <a href="@Url.Action("Detail", "Product", new {id = Model.System.Codename})">
        <h1 class="product-heading">@Model.System.Name</h1>
        @if (Model.ProductStatus.Key != null)
        {
            <span class="product-tile-status">
                @Model.ProductStatus.Value
            </span>
        }
        <figure class="product-tile-image">
            <img src="@image.Url" alt="@image.Name" width="452" height="452" />
        </figure>
        <div class="product-tile-info">
            <span class="product-tile-price">
                @Model.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))
            </span>
        </div>
    </a>
</article>