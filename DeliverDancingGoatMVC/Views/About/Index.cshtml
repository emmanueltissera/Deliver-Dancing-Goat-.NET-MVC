@model DeliverDancingGoatMVC.Models.AboutUsViewModel

@{
    ViewBag.Title = Resources.DancingGoat.AboutUs;
    var i = 0;
}

@foreach (var aboutFact in @Model.Facts)
{
    <section class="row text-and-image">
        <h2 class="col-lg-12">@aboutFact.Title</h2>
        @if (i++ % 2 == 0)
        {
            <div class="col-md-6">
                <div class="text-and-image-text">
                    @Html.Raw(aboutFact.Description)
                </div>
            </div>
            <div class="col-md-6">
                <img src="@aboutFact.Image.Url" class="img-responsive" alt="@aboutFact.Title" />
            </div>
        }
        else
        {
            <div class="col-md-6 col-md-push-6">
                <div class="text-and-image-text-right">
                    @Html.Raw(aboutFact.Description)
                </div>
            </div>
            <div class="col-md-6 col-md-pull-6">
                <img src="@aboutFact.Image.Url" class="img-responsive" alt="@aboutFact.Title" />
            </div>
        }
    </section>
}